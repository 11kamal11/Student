<odoo>
    <record id="view_class_form" model="ir.ui.view">
        <field name="name">class.form</field>
        <field name="model">student.management.class</field>
        <field name="arch" type="xml">
            <form string="Class">
                <group>
                    <field name="name"/>
                    <field name="code"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_class_list" model="ir.ui.view">
        <field name="name">class.list</field>
        <field name="model">student.management.class</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <record id="action_class" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="res_model">student.management.class</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
