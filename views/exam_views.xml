<odoo>
    <!-- Exam Form -->
    <record id="view_exam_form" model="ir.ui.view">
        <field name="name">exam.form</field>
        <field name="model">student.exam</field>
        <field name="arch" type="xml">
            <form string="Exam">
                <group>
                    <field name="name"/>
                    <field name="course_id"/>
                    <field name="exam_date"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Exam Tree -->
    <record id="view_exam_tree" model="ir.ui.view">
        <field name="name">exam.tree</field>
        <field name="model">student.exam</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="course_id"/>
                <field name="exam_date"/>
            </tree>
        </field>
    </record>

    <!-- Exam Result Form -->
    <record id="view_exam_result_form" model="ir.ui.view">
        <field name="name">exam.result.form</field>
        <field name="model">student.exam.result</field>
        <field name="arch" type="xml">
            <form string="Exam Result">
                <group>
                    <field name="exam_id"/>
                    <field name="student_id"/>
                    <field name="marks_obtained"/>
                    <field name="max_marks"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Exam Result Tree -->
    <record id="view_exam_result_tree" model="ir.ui.view">
        <field name="name">exam.result.tree</field>
        <field name="model">student.exam.result</field>
        <field name="arch" type="xml">
            <tree>
                <field name="exam_id"/>
                <field name="student_id"/>
                <field name="marks_obtained"/>
                <field name="max_marks"/>
            </tree>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_exam" model="ir.actions.act_window">
        <field name="name">Exams</field>
        <field name="res_model">student.exam</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_exam_result" model="ir.actions.act_window">
        <field name="name">Exam Results</field>
        <field name="res_model">student.exam.result</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_exam" name="Exams" parent="menu_root" action="action_exam"/>
    <menuitem id="menu_exam_result" name="Exam Results" parent="menu_root" action="action_exam_result"/>
</odoo>
